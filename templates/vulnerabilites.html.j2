{% extends "default.html.j2" %}

{% block title %}
  Vulnerabilités
{% endblock %}

{% block pageTitle %}
  Vulnerabilités
{% endblock %}

{% block content %}

  <div class="row">

    <!-- Succes / Info / Warning / Danger -->
    <div class="col-xl-4 col-md-6 mb-4">
      <div class="card border-left-warning shadow h-100 py-2">
        <div class="card-body">
          <div class="row no-gutters align-items-center">

            <div class="col mr-2">
              <div class="text-xs font-weight-bold text-gray-800 text-uppercase mb-1">CERTFR-2019-ALE-003</div>
              <div class="row no-gutters align-items-center">
                <div class="col-auto">
                  <div class="h6 mb-0 mr-3 font-weight-bold " style="text-transform: uppercase;">
                    <a href="{{ cert.url }}" class="text-warning">{{ cert.titre }}</a>
                  </div>
                  <div class="p mr-3">{{ cert.date }}</div>
                </div>
              </div>
            </div>

            <div class="col-auto">
              <i class="fas fa-biohazard fa-2x text-gray-300"></i>
            </div>

          </div>
        </div>
      </div>
    </div>

  </div>

{% endblock content %}